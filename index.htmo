.card{background:var(--card);padding:20px;border-radius:12px;text-align:center;cursor:pointer;transition:.3s;}
.card:hover{transform:scale(1.07);}
.section{display:none;padding:20px;text-align:center;animation:fade .4s;}
@keyframes fade{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}
#loader{display:none;margin:10px;}
input{padding:10px;margin:6px;}
footer{text-align:center;padding:15px;opacity:.8;}
.output{margin:10px 0;padding:10px;background:var(--card);border-radius:6px;}
canvas{position:fixed;top:0;left:0;width:100%;height:100%;pointer-events:none;z-index:9999;}
</style>
