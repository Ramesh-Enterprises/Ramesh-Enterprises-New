}
.light{--bg:#f2f2f2;--card:#fff;--text:#000;}
.retro{font-family:"Courier New",monospace;filter:contrast(1.2) saturate(1.4);}
body{margin:0;background:var(--bg);color:var(--text);font-family:Arial;transition:.4s;overflow-x:hidden;}
header{text-align:center;padding:20px;}
